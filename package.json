{
  "name": "basketball-gm",
  "version": "3.4.0",
  "description": "A single-player basketball simulation game. Make trades, set rosters, draft players, and try to build the next dynasty, all from within your web browser. The game is implemented entirely in client-side JavaScript, backed by IndexedDB.",
  "homepage": "https://basketball-gm.com/",
  "bugs": {
    "url": "https://github.com/dumbmatter/basketball-gm/issues"
  },
  "author": "Jeremy Scheff <jdscheff@gmail.com>",
  "main": "js/app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/dumbmatter/basketball-gm.git"
  },
  "scripts": {
    "start": "node tools/server.js",
    "build": "npm run build-js && node tools/build.js",
    "test": "node_modules/karma/bin/karma start",
    "lint": "node_modules/.bin/eslint js/** tools/**",
    "build-js": "node tools/build-js.js",
    "minify-js": "node tools/minify-js.js",
    "watch-js": "watchify -d js/app.js -o gen/app.js",
    "build-cordova": "echo 'probably broken since browserify switch'",
    "build-test": "browserify js/test/app.js -o gen/app-test.js",
    "watch-test": "watchify js/test/app.js -o gen/app-test.js"
  },
  "dependencies": {
    "backboard": "1.0.4",
    "bluebird": "3.3.4",
    "facesjs": "1.0.0",
    "indexeddb-getall-shim": "1.2.2",
    "jquery": "2.2.3",
    "jquery-ui": "1.10.5",
    "jquery-ui-touch-punch": "0.2.3",
    "knockout": "3.2.0",
    "knockout.mapping": "2.4.3",
    "lodash.sortby": "4.4.2",
    "source-map-support": "0.4.0",
    "underscore": "1.8.3"
  },
  "devDependencies": {
    "babel-eslint": "6.0.4",
    "babel-plugin-transform-async-to-generator": "6.8.0",
    "babel-preset-es2015": "6.6.0",
    "babelify": "7.3.0",
    "brfs": "1.4.3",
    "browserify": "13.0.0",
    "browserify-shim": "3.8.12",
    "clean-css": "2.2.23",
    "eslint": "2.9.0",
    "exorcist": "^0.4.0",
    "express": "4.13.4",
    "fs-extra": "0.30.0",
    "karma": "0.13.22",
    "karma-browserify": "5.0.4",
    "karma-chrome-launcher": "1.0.1",
    "karma-firefox-launcher": "0.1.7",
    "karma-mocha": "1.0.1",
    "karma-mocha-reporter": "2.0.2",
    "mocha": "2.4.5",
    "replace": "0.3.0",
    "watchify": "3.7.0"
  },
  "browser": {
    "lib/bootstrap-affix": "./js/lib/bootstrap-affix.js",
    "lib/bootstrap-alert": "./js/lib/bootstrap-alert.js",
    "lib/bootstrap-collapse": "./js/lib/bootstrap-collapse.js",
    "lib/bootstrap-dropdown": "./js/lib/bootstrap-dropdown.js",
    "lib/bootstrap-modal": "./js/lib/bootstrap-modal.js",
    "lib/bootstrap-popover": "./js/lib/bootstrap-popover.js",
    "lib/bootstrap-tooltip": "./js/lib/bootstrap-tooltip.js",
    "lib/bootstrap-transition": "./js/lib/bootstrap-transition.js",
    "lib/jquery.barGraph": "./js/lib/jquery.barGraph.js",
    "lib/jquery.dataTables": "./js/lib/jquery.dataTables.js",
    "lib/jquery.dataTables.bbgmSorting": "./js/lib/jquery.dataTables.bbgmSorting.js",
    "lib/jquery.dataTables.bootstrap": "./js/lib/jquery.dataTables.bootstrap.js"
  },
  "browserify-shim": {
    "lib/bootstrap-affix": {
      "depends": [
        "jquery:jQuery"
      ]
    },
    "lib/bootstrap-alert": {
      "depends": [
        "jquery:jQuery"
      ]
    },
    "lib/bootstrap-collapse": {
      "depends": [
        "lib/bootstrap-transition",
        "jquery:jQuery"
      ]
    },
    "lib/bootstrap-dropdown": {
      "depends": [
        "jquery:jQuery"
      ]
    },
    "lib/bootstrap-modal": {
      "depends": [
        "lib/bootstrap-transition",
        "jquery:jQuery"
      ]
    },
    "lib/bootstrap-popover": {
      "depends": [
        "lib/bootstrap-tooltip",
        "jquery:jQuery"
      ]
    },
    "lib/bootstrap-tooltip": {
      "depends": [
        "jquery:jQuery"
      ]
    },
    "lib/bootstrap-transition": {
      "depends": [
        "jquery:jQuery"
      ]
    },
    "lib/jquery.barGraph": {
      "depends": [
        "lib/bootstrap-tooltip",
        "jquery:jQuery"
      ]
    },
    "lib/jquery.dataTables": {
      "depends": [
        "jquery:jQuery"
      ]
    },
    "lib/jquery.dataTables.bbgmSorting": {
      "depends": [
        "jquery:jQuery",
        "lib/jquery.dataTables"
      ]
    },
    "lib/jquery.dataTables.bootstrap": {
      "depends": [
        "jquery:$",
        "lib/jquery.dataTables"
      ]
    }
  },
  "browserify": {
    "transform": [
      "babelify",
      "browserify-shim",
      "brfs"
    ]
  },
  "babel": {
    "plugins": [
      "transform-es2015-template-literals",
      "transform-es2015-literals",
      "transform-es2015-function-name",
      "transform-es2015-arrow-functions",
      "transform-es2015-block-scoped-functions",
      "transform-es2015-classes",
      "transform-es2015-object-super",
      "transform-es2015-shorthand-properties",
      "transform-es2015-duplicate-keys",
      "transform-es2015-computed-properties",
      "transform-es2015-for-of",
      "transform-es2015-sticky-regex",
      "transform-es2015-unicode-regex",
      "check-es2015-constants",
      "transform-es2015-spread",
      "transform-es2015-parameters",
      "transform-es2015-destructuring",
      "transform-es2015-block-scoping",
      "transform-es2015-typeof-symbol",
      "transform-es2015-modules-commonjs",
      "transform-async-to-generator"
    ],
    "ignore": [
      "js/lib/bootstrap*",
      "js/lib/davis*",
      "js/lib/html2canvas.js",
      "js/lib/jquery.dataTables.js",
      "js/lib/jquery.dataTables.bootstrap.js"
    ]
  },
  "private": true
}
