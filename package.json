		"deploy-all": "node --run lint && node --run test && node tools/deploy-all.ts",
		"dev": "node tools/watch/cli.ts",
		"preview": "node tools/preview.ts",
		"lint": "concurrently --raw \"node --run lint-js\" \"node --run lint-ts\"",
		"lint-js": "node --run pre-test && eslint --flag unstable_native_nodejs_ts_config",
		"lint-ts": "node --run pre-test && tsc",
		"pre-test": "node tools/pre-test.ts",
		"prettier": "prettier --write \"*.{mjs,cjs,js,json,scss,ts,tsx}\" \"public/**/*.{mjs,cjs,js,json,scss,ts,tsx}\" \"src/**/*.{mjs,cjs,js,json,scss,ts,tsx}\" \"tools/**/*.{mjs,cjs,js,json,scss,ts,tsx}\"",
		"test": "node --run pre-test && vitest --run",
		"test-e2e": "node --run pre-test && node node_modules/karma/bin/karma start karma.conf.ts",
		"test-e2e-watch": "node --run pre-test && node node_modules/karma/bin/karma start karma.conf.ts --auto-watch --no-single-run",
		"test-e2e-browserstack": "node --run pre-test && node node_modules/karma/bin/karma start karma-browserstack.conf.ts",
		"prepare": "husky",
		"postinstall": "pnpm playwright install"
	},
	"lint-staged": {
		"*.{js,cjs,mjs,jsx,json,scss,ts,cts,mts,tsx}": "prettier --write"
	},
