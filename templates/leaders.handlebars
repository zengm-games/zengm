<form action="/l/{{lid}}/leaders" method="GET" class="form-inline pull-right">
  <select id="leaders-select-season" name="season" class="season">
    {{#seasons}}
      <option value="{{season}}"{{#if selected}} selected="selected"{{/if}}>{{season}} season</option>
    {{/seasons}}
  </select>
</form>

<h1>League Leaders {{new_window}}</h1>

<p>Only eligible players are shown (<i>e.g.<i> a player shooting 2 for 2 on the season is not eligible for the league lead in FG%).</p>

<p></p>
<div class="row-fluid">
  {{#categories}}
    {{#if newRow}}
</div>
<p></p>
<div class="row-fluid">
    {{/if}}
    <div class="span4">
      <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-condensed leaders">
      <thead>
        <tr><th>{{name}}</th><th title="{{title}}">{{stat}}</th></tr>
      </thead>
      <tbody>
        {{#data}}
          <tr{{#if userTeam}} class="alert-info"{{/if}}><td>{{i}}. {{playerNameLabels pid name injury ratings.skills}}, <a href="/l/{{../../lid}}/roster/{{abbrev}}/{{../../season}}">{{abbrev}}</a></td><td>{{round stat 1}}</tr>
        {{/data}}
      </tbody>
      </table>
    </div>
  {{/categories}}
</div>